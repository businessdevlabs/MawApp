import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { BookingService } from '@/integrations/mongodb';

export const useProviderSchedule = (providerId?: string) => {
  return useQuery({
    queryKey: ['provider-schedule', providerId],
    queryFn: async () => {
      if (!providerId) return [];
      
      // Get bookings for the next 30 days to show schedule
      const startDate = new Date().toISOString().split('T')[0];
      const endDate = new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];
      
      return await BookingService.getBookingsInDateRange(providerId, startDate, endDate);
    },
    enabled: !!providerId,
  });
};

export const useAvailableSlots = (providerId: string, date: string) => {
  return useQuery({
    queryKey: ['available-slots', providerId, date],
    queryFn: async () => {
      if (!providerId || !date) return [];
      
      return await BookingService.getAvailableTimeSlots(providerId, date);
    },
    enabled: !!providerId && !!date,
  });
};

export const useProviderBlackouts = (providerId?: string) => {
  return useQuery({
